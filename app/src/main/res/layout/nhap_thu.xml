<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/thuDialog"
    android:layout_gravity="center">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:text="Loại" />

        <Spinner
            android:id="@+id/spDanhMucThu"
            android:layout_width="180dp"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/btThemDanhMucThu"
            android:layout_width="27dp"
            android:layout_height="27dp"
            app:srcCompat="@drawable/add_danh_muc"
            android:background="@color/regular_pink"
            tools:ignore="VectorDrawableCompat"/>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="100dp"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:text="Số tiền" />

        <EditText
            android:id="@+id/tienThu"
            android:layout_width="180dp"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:maxLength="20"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="VND"
            android:inputType="number|numberDecimal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VNĐ"
            android:textSize="20dp"
            android:textStyle="bold"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="100dp"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:text="Thời gian" />
        <TextView
            android:id="@+id/lichThu"
            android:layout_width="150dp"
            android:layout_marginLeft="10dp"
            android:ems="10"
            android:text="01-01-2021"
            android:maxLength="10"
            android:inputType="date"
            android:layout_height="wrap_content"
            android:textSize="20dp"/>

        <ImageButton
            android:id="@+id/btLichThu"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:scaleType="center"
            android:layout_marginLeft="10dp"
            android:background="#FF7B82"
            app:srcCompat="@drawable/lich"
            tools:ignore="VectorDrawableCompat" />


    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Ghi chú"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/ghichuThu"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:maxLength="50"
            android:textSize="20dp" />

    </TableRow>


</LinearLayout>
